@model Phone

@{
    ViewData["Title"] = "Phone";
}

<div class="row">
   
        <div class="col-md-9  offset-2">
            <div class="card mb-3" style="max-width: 540px;">
                <div class="row g-0">
                    <div class="col-md-12">
                        <div class="card-header text-white bg-info">
                            <p class="card-text">
                                <h5 class="card-title">
                                    @Model.PhoneName

                                </h5>
                            </p>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <img src="@Model.ImageURL" width="100%" alt="@Model.PhoneName">
                    </div>
                    <div class="col-md-8">
                        <div class="card-body">
                            <p class="card-text">@Model.PhoneDescription</p>
                            <p class="card-text"><b>Category: </b>@Model.OSCategory</p>
                        <p class="card-text"><b>Phonemanufacturer: </b>
                            <a asp-controller="PhoneManufacturer" asp-action="Details" asp-route-id="@Model.ManufacturerId">
                                @Model.PhoneManufacturer.ManufacturerName
                        </a>
                        </p>
                        </div>
                    </div>
                    <div class="col-md-12">
                        <div class="card-footer ">
                            <p class="card-text">
                                <a class="btn btn-outline-primary float-right" asp-action="Details" asp-route-id="@Model.Id">
                                    <i class="bi bi-eye-fill"></i> Show Details
                                </a>
                            <a class="btn btn-success text-white" asp-controller="Orders" asp-action="AddItemToShoppingCart" asp-route-id="@Model.Id"><i class="bi bi-cart-plus"></i> Add to Cart (Price @Model.Price.ToString("c")) </a>
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    
</div>

